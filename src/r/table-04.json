      "path": "src/components/shadcn-space/blocks/table-04/table04.tsx",
      "content": "\"use client\";\r\n\r\n\r\nimport { Icon } from \"@iconify/react\";\r\nimport {\r\n    Table,\r\n    TableBody,\r\n    TableCell,\r\n    TableHead,\r\n    TableHeader,\r\n    TableRow,\r\n} from \"@/components/ui/table\";\r\nimport { Badge } from \"@/components/ui/badge\";\r\nimport { Checkbox } from \"@/components/ui/checkbox\";\r\nimport { Progress } from \"@/components/ui/progress\";\r\nimport {\r\n    DropdownMenu,\r\n    DropdownMenuContent,\r\n    DropdownMenuItem,\r\n    DropdownMenuTrigger,\r\n} from \"@/components/ui/dropdown-menu\";\r\nimport { Card } from \"@/components/ui/card\";\r\n\r\nconst Table04 = () => {\r\n    const tableActionData = [\r\n        { icon: \"solar:add-circle-linear\", listtitle: \"Add\" },\r\n        { icon: \"solar:pen-new-square-outline\", listtitle: \"Edit\" },\r\n        { icon: \"solar:trash-bin-minimalistic-2-outline\", listtitle: \"Delete\" },\r\n    ];\r\n\r\n    const checkboxTableData: any[] = [\r\n        {\r\n            invoice: 'INV-3066',\r\n            status: 'paid',\r\n            statuscolor: 'bg-teal-400/10 text-teal-400',\r\n            statusicon: \"solar:check-read-linear\",\r\n            avatar: \"https://images.shadcnspace.com/assets/profiles/user-11.jpg\",\r\n            name: 'Olivia Rhye',\r\n            handle: 'olivia@ui.com',\r\n            progress: 60,\r\n            progressColor: '**:data-[slot=progress-indicator]:bg-teal-400'\r\n        },\r\n        {\r\n            invoice: 'INV-3067',\r\n            status: 'cancelled',\r\n            statuscolor: 'bg-red-500/10 text-red-500',\r\n            statusicon: \"solar:shield-cross-bold\",\r\n            avatar: \"https://images.shadcnspace.com/assets/profiles/user-8.jpg\",\r\n            name: 'Barbara Steele',\r\n            handle: 'steele@ui.com',\r\n            progress: 30,\r\n            progressColor: '**:data-[slot=progress-indicator]:bg-red-500'\r\n        },\r\n        {\r\n            invoice: 'INV-3068',\r\n            status: 'paid',\r\n            statuscolor: 'bg-teal-400/10 text-teal-400',\r\n            statusicon: \"solar:check-read-linear\",\r\n            avatar: \"https://images.shadcnspace.com/assets/profiles/user-3.jpg\",\r\n            name: 'Leonard Gordon',\r\n            handle: 'olivia@ui.com',\r\n            progress: 45,\r\n            progressColor: '**:data-[slot=progress-indicator]:bg-teal-400'\r\n        },\r\n        {\r\n            invoice: 'INV-3069',\r\n            status: 'refunded',\r\n            statuscolor: 'bg-sky-400/10 text-sky-400',\r\n            statusicon: \"solar:undo-left-round-bold\",\r\n            avatar: \"https://images.shadcnspace.com/assets/profiles/user-4.jpg\",\r\n            name: 'Evelyn Pope',\r\n            handle: 'steele@ui.com',\r\n            progress: 37,\r\n            progressColor: '**:data-[slot=progress-indicator]:bg-sky-400'\r\n        },\r\n        {\r\n            invoice: 'INV-3070',\r\n            status: 'cancelled',\r\n            statuscolor: 'bg-red-500/10 text-red-500',\r\n            statusicon: \"solar:shield-cross-bold\",\r\n            avatar: \"https://images.shadcnspace.com/assets/profiles/user-5.jpg\",\r\n            name: 'Tommy Garza',\r\n            handle: 'olivia@ui.com',\r\n            progress: 87,\r\n            progressColor: '**:data-[slot=progress-indicator]:bg-red-500'\r\n        },\r\n        {\r\n            invoice: 'INV-3071',\r\n            status: 'refunded',\r\n            statuscolor: 'bg-sky-400/10 text-sky-400',\r\n            statusicon: \"solar:undo-left-round-bold\",\r\n            avatar: \"https://images.shadcnspace.com/assets/profiles/user-12.jpg\",\r\n            name: 'Isabel Vasquez',\r\n            handle: 'steele@ui.com',\r\n            progress: 32,\r\n            progressColor: '**:data-[slot=progress-indicator]:bg-sky-400'\r\n        }\r\n    ];\r\n\r\n    return (\r\n        <div className=\"min-h-screen mx-7 flex flex-col items-center justify-center\">\r\n            <Card className=\"max-w-5xl w-full rounded-md border-0 py-2 px-2 overflow-hidden\">\r\n                <div className=\"overflow-x-auto\">\r\n                    <Table className=\"min-w-2xl\">\r\n                        <TableHeader>\r\n                            <TableRow className=\"hover:bg-transparent!\">\r\n                                <TableHead className=\"text-base font-semibold py-3\">#</TableHead>\r\n                                <TableHead className=\"text-base font-semibold py-3\">Invoice</TableHead>\r\n                                <TableHead className=\"text-base font-semibold py-3\">Status</TableHead>\r\n                                <TableHead className=\"text-base font-semibold py-3\">Customer</TableHead>\r\n                                <TableHead className=\"text-base font-semibold py-3\">Progress</TableHead>\r\n                                <TableHead className=\"text-base font-semibold py-3\"></TableHead>\r\n                            </TableRow>\r\n                        </TableHeader>\r\n\r\n                        <TableBody className=\"divide-y divide-border dark:divide-darkborder\">\r\n                            {checkboxTableData.map((item, index) => (\r\n                                <TableRow key={index}>\r\n                                    {/* Checkbox */}\r\n                                    <TableCell className=\"whitespace-nowrap\">\r\n                                        <Checkbox className=\"data-[state=checked]:bg-blue-500 dark:data-[state=checked]:bg-blue-500 data-[state=checked]:border-blue-500 dark:data-[state=checked]:border-blue-500 cursor-pointer\" />\r\n                                    </TableCell>\r\n\r\n                                    {/* Invoice */}\r\n                                    <TableCell className=\"whitespace-nowrap\">\r\n                                        <h6 className=\"text-sm! font-normal!\">{item.invoice}</h6>\r\n                                    </TableCell>\r\n\r\n                                    {/* Status Badge */}\r\n                                    <TableCell className=\"whitespace-nowrap\">\r\n                                        <Badge\r\n                                            className={`text-xs font-medium capitalize flex items-center gap-1 w-fit ${item.statuscolor}`}>\r\n                                            <Icon icon={item.statusicon} width={15} height={15} />\r\n                                            {item.status}\r\n                                        </Badge>\r\n                                    </TableCell>\r\n\r\n                                    {/* Customer */}\r\n                                    <TableCell className=\"whitespace-nowrap\">\r\n                                        <div className=\"flex gap-3 items-center\">\r\n                                            <img\r\n                                                src={item.avatar}\r\n                                                alt=\"icon\"\r\n                                                className=\"h-10 w-10 rounded-full\"\r\n                                                width={40}\r\n                                                height={40}\r\n                                            />\r\n                                            <div className=\"truncate line-clamp-2 max-w-56\">\r\n                                                <h6 className=\"text-base! font-normal!\">{item.name}</h6>\r\n                                                <p className=\"text-sm text-muted-foreground\">{item.handle}</p>\r\n                                            </div>\r\n                                        </div>\r\n                                    </TableCell>\r\n\r\n                                    {/* Progress */}\r\n                                    <TableCell className=\"whitespace-nowrap\">\r\n                                        <Progress\r\n                                            value={item.progress}\r\n                                            className={`h-1 ${item.progressColor} transition-all duration-500 ease-out`}\r\n                                        />\r\n                                    </TableCell>\r\n\r\n                                    {/* Dropdown Menu */}\r\n                                    <TableCell className=\"whitespace-nowrap\">\r\n                                        <DropdownMenu>\r\n                                            <DropdownMenuTrigger >\r\n                                                <span className=\"h-9 w-9 flex justify-center items-center rounded-full hover:bg-lightprimary hover:text-primary cursor-pointer\">\r\n                                                    <Icon icon=\"solar:menu-dots-bold\" width={22} height={22} />\r\n                                                </span>\r\n                                            </DropdownMenuTrigger>\r\n\r\n                                            <DropdownMenuContent align=\"end\">\r\n                                                {tableActionData.map((action, idx) => (\r\n                                                    <DropdownMenuItem key={idx} className=\"group flex gap-3 hover:bg-accent! cursor-pointer\">\r\n                                                        <Icon icon={action.icon} height={18} className=\"text-popover-foreground\" />\r\n                                                        <span>{action.listtitle}</span>\r\n                                                    </DropdownMenuItem>\r\n                                                ))}\r\n                                            </DropdownMenuContent>\r\n                                        </DropdownMenu>\r\n                                    </TableCell>\r\n                                </TableRow>\r\n                            ))}\r\n                        </TableBody>\r\n                    </Table>\r\n                </div>\r\n            </Card>\r\n        </div>\r\n    );\r\n};\r\n\r\nexport default Table04;\r\n",
      "type": "registry:component",
      "target": "components/shadcn-space/blocks/table-04/table04.tsx"
    }
  ]
